@typeparam TItem

@Header
@foreach (var item in Items)
{
    @Row(item)
}

@if (ItemToEdit != null)
{
    @EditTemplate(ItemToEdit)
}

@Footer

@code {
    [Parameter]
    public RenderFragment Header { get; set; } = null!;

    [Parameter]
    public RenderFragment<TItem> Row { get; set; } = null!;

    [Parameter]
    public RenderFragment Footer { get; set; } = null!;

    [Parameter]
    public RenderFragment<TItem> EditTemplate { get; set; } = null!;

    [Parameter]
    public List<TItem> Items { get; set; } = null!;

    public TItem ItemToEdit { get; set; } = default(TItem)!;
}
